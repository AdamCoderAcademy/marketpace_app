<p id="notice"><%= notice %></p>

<h1>Current Produce available</h1>
<br>

<%# Product table %>
<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Quantity</th>
      <th>Price</th>
      <th>Farm</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @products.each do |product| %>
      <tr>
        <td><%= product.name %></td>
        <td><%= product.quantity %></td>
        <td><%= product.price %></td>
        <td><%= product.farm %></td>
        <%# main button links  %>
        <td><%= link_to 'View', product, class:"btn btn-primary" %></td>
        <%# <% if current_user == product.user_id?  check this line for errors%>
        <% if user_signed_in? %>
        <td><%= link_to 'Edit', edit_product_path(product), class:"btn btn-warning"  %></td>
        <td><%= link_to 'Delete', product, method: :delete, data: { confirm: 'Are you sure?' } , class:"btn btn-danger" %></td>
        <% end %>
      </tr>
    <% end %>
  </tbody>
</table>
<br>